<div class="container">
    <h1 class="display-4 mb-5">הוספת ציון</h1>
    <form action="" method="post">
    <select name="subject" class="form-select mb-3">
        {{#each db}}
        <option value="{{this.id}}">{{this.subject_name}}</option>
        {{/each}}
    </select>
    <input name="score" type="text" placeholder="ציון" class="form-control mb-3">

    <input type="submit" value="עדכן" class="btn btn-primary" style="display: block;">
    </form>
</div>